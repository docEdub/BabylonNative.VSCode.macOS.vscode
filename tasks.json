{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "macOS CMake",
      "options": {
        "cwd": ".."
      },
      "command": "cmake",
      "args": ["-B", "BabylonNative/.build/macOS", "-G", "Xcode", "-D", "BABYLON_NATIVE_BUILD_APPS=ON", "-D", "CMAKE_POLICY_VERSION_MINIMUM=3.5"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "iOS CMake",
      "command": "cmake",
      "args": [
        "-B",
        ".build/iOS",

        "-G",
        "Xcode",

        "-D",
        "IOS=ON",
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "macOS Playground",
      "dependsOn": "macOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        ".build/macOS/BabylonNative/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "build",
        "-quiet"
      ],
      "group": {
        "kind": "build",
        // "isDefault": true
      }
    },
    {
      "label": "macOS UnitTests",
      "dependsOn": "macOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        ".build/macOS/BabylonNative/BabylonNative.xcodeproj",
        "-scheme",
        "UnitTests",
        "build",
        // "-quiet"
      ],
      "group": {
        "kind": "build",
        // "isDefault": true
      }
    },
    {
      "label": "macOS ValidationTests",
      "dependsOn": "macOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        ".build/macOS/BabylonNative/BabylonNative.xcodeproj",
        "-scheme",
        "ValidationTests",
        "build",
        // "-quiet"
      ],
      "group": {
        "kind": "build",
        // "isDefault": true
      }
    },
    {
      "label": "iOS Playground (Simulator)",
      "dependsOn": "iOS CMake",
      "command": "../scripts/xcodebuild-xcpretty.command",
      "args": [
        "-project",
        ".build/iOS/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "-sdk",
        "iphonesimulator",
        "build",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "iOS Playground (Device)",
      "dependsOn": "iOS CMake",
      "command": "xcodebuild",
      "args": [
        "-project",
        ".build/iOS/BabylonNative/BabylonNative.xcodeproj",
        "-scheme",
        "Playground",
        "-sdk",
        "iphoneos",
        "-allowProvisioningUpdates",
        "build",
        "-quiet"
      ],
      "group": {
        "kind": "build",
        // "isDefault": true
      }
    }
  ]
}
